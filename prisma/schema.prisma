generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @unique @default(autoincrement())
  username String
  email    String @unique
  password String
  posts    Post[]
}

model Post {
  id          Int    @unique @default(autoincrement())
  title       String
  description String
  image       String
  User        User?  @relation(fields: [userId], references: [id])
  userId      Int?
}
